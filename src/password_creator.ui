<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ParolemanagerPassword_dialog" parent="AdwWindow">
    <property name="default-width">300</property>
    <property name="default-height">300</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">5</property>
        <child>
          <object class="GtkHeaderBar" id="header_bar">
          </object>
        </child>
        <child>
          <object class="GtkGrid">
            <property name="row_spacing">5</property>
            <property name="column_spacing">5</property>
            <property name="margin-top">10</property>
            <property name="margin-bottom">10</property>
            <property name="margin-start">10</property>
            <property name="margin-end">10</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Метка</property>
                <property name="hexpand">true</property>
                <property name="halign">GTK_ALIGN_FILL</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="name">
                <property name="hexpand">true</property>
                <property name="halign">GTK_ALIGN_FILL</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">Пароль</property>
                <property name="hexpand">true</property>
                <property name="halign">GTK_ALIGN_FILL</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="passwd_field">
                <property name="hexpand">true</property>
                <property name="halign">GTK_ALIGN_FILL</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="breaker">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="halign">GTK_ALIGN_START</property>
                <property name="valign">GTK_ALIGN_END</property>
                <property name="label">Отмена</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="saver">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="halign">GTK_ALIGN_END</property>
                <property name="valign">GTK_ALIGN_END</property>
                <property name="label">Сохранить</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
